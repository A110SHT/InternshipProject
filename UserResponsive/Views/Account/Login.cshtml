@model ModelEntities.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h1>Login</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <fieldset>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter Email", @autofucus = "", @autocomplete = "false" })
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Enter Password", @autocomplete = "false" })
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Log In" class="btn btn-primary" />
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" href="@Url.Action("ForgetPassword","Account")">Forgot your password?</a>
                    </p>
                </div>
            </fieldset>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
